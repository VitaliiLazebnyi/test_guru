<%= form_with model: [:admin, @test], html: { id: 'test_passage' }, local: true do |form| %>
  <%= render 'shared/errors', resource: @test %>

  <input name="test[author_id]" value="<%= current_user.id %>" type="hidden" />

  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title,
                        autofocus: true,
                        class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :level %>
    <%= form.number_field :level, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :duration %>
    <%= form.number_field :duration, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :category_id %>:
    <%= form.collection_select :category_id, Category.all, :id, :title, prompt: true, class: 'form-control' %>
  </div>

  <%= form.submit class: 'btn btn-primary' %>
<% end %>
