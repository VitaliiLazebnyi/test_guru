<%= form_with model: @test, url: admin_test_path(@test), local: true do |form| %>
  <%= render 'shared/errors', resource: @test %>

  <input name="test[author_id]" value="<%= current_user.id %>" type="hidden" />

  <div>
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :level %>
    <%= form.number_field :level %>
  </div>

  <div>
    <%= form.label :category_id %>:
    <%= form.collection_select :category_id, Category.all, :id, :title, prompt: true %>
  </div>

  <%= form.submit %>
<% end %>
